<% layout('layout/boilaplate') %>
  <h1>All Campgrounds</h1>
  <div>
    <a href="/campgrounds/new">
      Create New Ground
    </a>
  </div>
  <% for (let campground of Campgrounds) { %>
    <div class="card" mb-3>
      <div class="row">
        <div class="col-md-4">
          <img src="<%= campground.image %>" class="img-fluid" alt="">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= campground.title %>
                <p class="card-text">
                  <%= campground.description %>
                </p>
                <p class="card-text">
                  <small class="text-muted">
                    <%= campground.location %>
                  </small>
                </p>
                <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %> </a>
            </h5>
          </div>
        </div>
      </div>
    </div>
    <% } %>